<?xml version="1.0"?>

<analysis_inputs analysis="HPGASTPC" version="2015a" config="HPTPC">
  
  <GeometryBuilder>
    <OutputROOTFile>              HPGasTPCGeometryTest.root        </OutputROOTFile> 
    <OutputGDMLFile>              HPGasTPCGeometryTest.gdml        </OutputGDMLFile>

    <YAxisOffset>                 0.0                          </YAxisOffset>        <!-- m -->

    <!-- TPC construction -->
    <TPCConstruction>
      <TPCBuild>                  0                            </TPCBuild>
      <TPCSideX>                  2.0                          </TPCSideX>            <!-- m -->
      <TPCSideY>                  2.0                          </TPCSideY>            <!-- m -->
      <TPCSideZ>                  2.0                          </TPCSideZ>            <!-- m -->
      <TPCDensity>                0.035                        </TPCDensity>          <!-- g/cm3 -->
      <TPCPlacementZ>             0.0                          </TPCPlacementZ>       <!-- m -->
      <TPCMaterial>               ArgonGas                     </TPCMaterial>         <!-- 95% Ar + 5% quenching gases -->
    </TPCConstruction>
    
    <!-- Vessel construction -->
    <VesselConstruction>
      <VesselBuild>               1                            </VesselBuild>
      <VesselRadiusRatio>         0.4                          </VesselRadiusRatio>    <!-- m -->
      <VesselThickness>           0.1                          </VesselThickness>      <!-- m -->
      <VesselRadius>              2.5                          </VesselRadius>         <!-- m -->
      <VesselLength>              5.0                          </VesselLength>         <!-- m -->
      <VesselPlacementZ>          0.0                          </VesselPlacementZ>     <!-- m -->
      <VesselMaterial>            Aluminium                    </VesselMaterial>       <!--  -->
      <VesselDensity>             0.27                         </VesselDensity>        <!-- g/cm3 honeycomb aluminium -->
    </VesselConstruction>

    <!-- Ecal construction -->
    <EcalConstruction>
      <EcalBuild>                 1                             </EcalBuild>
      <EcalLayers>                50                            </EcalLayers>
      <EcalThickness>             1                             </EcalThickness>       <!-- cm -->
      <EcalGap>                   0                             </EcalGap>             <!-- cm -->
      <EcalMaterial>              Scintillator                  </EcalMaterial>
      <EcalDensity>               1.2                           </EcalDensity>         <!-- g/cm3 -->
      <EcalAbsBuild>              0                             </EcalAbsBuild>
      <EcalAbsThickness>          0.05                          </EcalAbsThickness>    <!-- cm -->
      <EcalAbsMaterial>           Lead                          </EcalAbsMaterial>
      <EcalAbsDensity>            11.34                         </EcalAbsDensity>      <!-- g/cm3 -->
    </EcalConstruction>

    <!-- Magnet construction -->
    <MagnetConstruction>
      <MagnetBuild>               0                             </MagnetBuild>
      <MagnetThickness>           50                            </MagnetThickness>     <!-- cm -->
      <MagnetDensity>             7.87                          </MagnetDensity>       <!-- g/cm3 -->
      <MagnetMaterial>            Iron                          </MagnetMaterial>
    </MagnetConstruction> 

     <!-- Cavity construction -->
     <CavityConstruction>
       <CavityBuild>              0                             </CavityBuild>
       <CavityGap>                2.0                           </CavityGap>            <!-- m -->
       <CavityDensity>            1.29e-3                       </CavityDensity>        <!-- g/cm3 -->
     </CavityConstruction>

    <!-- Rock construction -->
    <RockConstruction>
      <RockBuild>                 0                              </RockBuild>
      <RockX>                     20                             </RockX>               <!-- m -->
      <RockY>                     20                             </RockY>               <!-- m -->
      <RockZ>                     60                             </RockZ>               <!-- m -->
      <RockRadius>                20                             </RockRadius>          <!-- m -->
      <RockLength>                50                             </RockLength>          <!-- m -->
      <RockDensity>               2320                           </RockDensity>         <!-- kg/m3 -->
      <RockMaterial>              Sandstone                      </RockMaterial>
    </RockConstruction>

  </GeometryBuilder>
  
</analysis_inputs>
